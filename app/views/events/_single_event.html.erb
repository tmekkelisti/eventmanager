<div class="ui raised segment">
  <h1 class="ui header">
    <div class="content"><%= link_to event.name, event_path(event) %></div>
    <div class="sub header">
      <%= event.start_time.strftime("%d.%m.%Y %H:%M") %> -
      <%= event.end_time.strftime("%d.%m.%Y %H:%M") %> |
      Created by: <%= event.user.username %>
    </div>
  </h1>
  <p><%= event.description %></p>

  <div class="ui grid">
    <div class="four wide column">
      <h2 class="ui sub header">
        Location
      </h2>
      <span>
        <%= link_to event.location.name, location_path(event.location) %>
          (<%= event.location.address %>)
      </span>
    </div>
    <div class="four wide column">
      <h2 class="ui sub header">
        Coming
      </h2>
      <span>
        <span><%= event.participations.yes.length %></span>
      </span>
    </div>
    <div class="four wide column">
      <h2 class="ui sub header">
        Propably.. maybe?
      </h2>
      <span>
        <span><%= event.participations.maybe.length %></span>
      </span>
    </div>
    <div class="four wide column">
      <h2 class="ui sub header">
        Losers
      </h2>
      <span>
        <span><%= event.participations.no.length %></span>
      </span>
    </div>
  </div>



</div>
