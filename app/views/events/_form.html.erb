<%= form_for(event, html: {class: 'ui form'}) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :location_id %>
    <%= f.select :location_id, options_from_collection_for_select(@locations, :id, :name),
      :prompt => 'Choose location' %>
  </div>

  <div class="fields">
    <div class="field">
      <%= f.label :start_time %>
    </div>
    <%= f.datetime_select :start_time,
                          :minute_step => 15,
                          :order => [:day, :month, :year],
                          :start_time => DateTime.now.to_date
                          %>
  </div>

  <div class="fields">
    <div class="field">
      <%= f.label :end_time %>
    </div>
    <%= f.datetime_select :end_time,
                          :minute_step => 15,
                          :order => [:day, :month, :year],
                          :start_time => DateTime.now.to_date
                          %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
